<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/l1"
      android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
             <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/n1"
        android:gravity="center"
        android:text="Registration"
		android:textSize="35dp"
    android:textColor="#2D2049" />
         
              <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@layout/rounded_border_edittext"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        
        android:ems="10"
        android:gravity="center"
        android:hint="User Name" />
               <EditText
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Contact" />
               <EditText
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Child Mobile No" /> 
                <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Email Id" />
                 <EditText
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Address" />
                  <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
          android:inputType="textPassword"
        android:hint="Password" />
                   <EditText
        android:id="@+id/cpass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
          android:inputType="textPassword"
        android:hint="C-Password" />
                    
          <Button
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
      android:layout_below="@+id/cpass"
        
         android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#F94"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:gravity="center"        
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />   
             
        </LinearLayout>
    </ScrollView>
 
</RelativeLayout>